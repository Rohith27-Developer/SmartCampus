                android:layout_marginLeft="2dp"
                android:maxLines="1"
                android:textSize="10dp"
                android:fontFamily="@font/colusregular"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:gravity="center"
                />
            <TextView
