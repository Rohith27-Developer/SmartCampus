                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/colusregular"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:gravity="center"
                    />

            </LinearLayout>
        </LinearLayout>

