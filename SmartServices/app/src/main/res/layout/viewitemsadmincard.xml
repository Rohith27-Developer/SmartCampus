<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:andoid="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardElevation="4dp"
        android:layout_gravity="top"
        android:id="@+id/item_card_view_admin"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="15dp"

      >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/item_image_admin"
                andoid:src="@drawable/noodles"
                android:scaleType="fitCenter"
                android:layout_marginRight="10dp"
                android:layout_alignParentEnd="true"
                app:riv_mutate_background="true"
                app:riv_oval="false" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
            <TextView
                android:id="@+id/item_name_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/ubuntubold"
                android:text="Item name"
                android:textColor="#555555"
                android:textSize="16sp" />
                <TextView
                    android:id="@+id/status_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/ubuntumedium"
                    android:text="Available"
                    android:textColor="#555555"
                    android:textSize="14sp" />

                <RatingBar
                    android:id="@+id/ratingBar2"
                    android:layout_width="wrap_content"
                    android:numStars="5"
                    android:rating="1.2"
                    android:isIndicator="true"
                    android:progressTint="#1e3d59"
                    android:clickable="false"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:secondaryProgressTint="#00000000"
                    style="?android:attr/ratingBarStyleSmall"
                    android:stepSize="0.1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>