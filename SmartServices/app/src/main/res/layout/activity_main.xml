<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_gravity="center"
android:background="@color/canteenbg"
tools:context=".MainActivity">
<LinearLayout
    android:id="@+id/constraintLayout"
    android:layout_width="63dp"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:layout_marginTop="150dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/textView2"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:fontFamily="@font/novar"
            android:gravity="center"
            android:rotation="270"
            android:text="Lunch"
            android:textColor="#1e3d59"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="@+id/textView3"

            app:layout_constraintStart_toStartOf="@+id/textView3" />
        <ImageView
            android:id="@+id/img1"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginBottom="80dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="-10dp"
            android:fontFamily="@font/novar"
            android:gravity="center"
            android:rotation="270"
            android:src="@drawable/blu_cir"
            android:textColor="#373131"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="-295dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:fontFamily="@font/novar"
            android:gravity="center"
            android:rotation="270"
            android:text="Drinks"
            android:textColor="#4B637A"
            android:textSize="16dp"
            />
        <ImageView
            android:id="@+id/img2"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginBottom="80dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="-10dp"
            android:fontFamily="@font/novar"
            android:gravity="center"
            android:rotation="270"
            android:src="@drawable/blu_cir"
            android:textColor="#373131"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="-195dp">
        <TextView
            android:id="@+id/textView"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_marginBottom="80dp"
            android:fontFamily="@font/novar"
            android:gravity="center"
            android:rotation="270"
            android:text="Tiffin"
            android:textColor="#4B637A"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            />
        <ImageView
            android:id="@+id/img3"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginBottom="80dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="-10dp"
            android:fontFamily="@font/novar"
            android:gravity="center"
            android:rotation="270"
            android:src="@drawable/blu_cir"
            android:textColor="#373131"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            />


    </LinearLayout>


</LinearLayout>





<TextView
    android:id="@+id/textView5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="32dp"
    android:layout_marginTop="32dp"
    android:fontFamily="@font/colusregular"
    android:text="What would you"
    android:textColor="@color/textcolorallposts"
    android:textSize="18dp"
    />

<TextView
    android:id="@+id/textView6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/textcolorallposts"
    android:layout_marginStart="32dp"
    android:layout_marginTop="58dp"
    android:fontFamily="@font/colusregular"
    android:text="like to order ?"
    android:textStyle="bold"
    android:textSize="18sp"
    />


<com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/fab"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_marginBottom="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="32dp"
    android:layout_alignParentEnd="true"
    android:src="@drawable/ic_filter"
    android:tint="@android:color/white"
    app:backgroundTint="@color/dashname"
    app:elevation="0dp" />


<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recycler_view"
    android:layout_width="340dp"
    android:layout_height="330dp"
    android:layout_alignParentEnd="true"
    android:layout_marginTop="190dp"
    />
<TextView
    android:id="@+id/most"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="Most Popular"
    android:textSize="20dp"
    android:layout_marginLeft="25dp"
    android:textColor="#808080"
    android:fontFamily="@font/colusregular"
    android:layout_marginTop="543dp"
    app:layout_constraintTop_toBottomOf="@+id/recycler_view"
    />


<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/side_recycler_view"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginTop="585dp"
    android:paddingLeft="10dp"
    app:layout_constraintTop_toBottomOf="@+id/recycler_view"
    tools:ignore="MissingConstraints"
    />




</RelativeLayout>