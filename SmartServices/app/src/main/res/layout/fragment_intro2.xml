<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#dba858"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/food_intro1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintHorizontal_bias="0.3"
        android:src="@drawable/cashlesspayment"
        app:layout_constraintStart_toStartOf="parent"></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CASHLESS PAYMENT"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0"
        android:id="@+id/food_intro1_tv"
        android:layout_marginTop="25dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/food_intro1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/food_intro1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CASHLESS"
        android:id="@+id/food_intro1_tv1"
        android:fontFamily="sans-serif-light"
        android:layout_marginRight="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/food_intro1"
        app:layout_constraintTop_toBottomOf="@id/food_intro1"
        android:textSize="42sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRANSACTIONS"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginRight="30dp"
        android:textColor="#000000"
        android:id="@+id/food_intro1_tv2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/food_intro1_tv1"
        app:layout_constraintTop_toBottomOf="@id/food_intro1_tv1"
        android:textSize="46dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Don't stress yourself, Pay on the App itself."
        app:layout_constraintHeight_percent=".1"
        app:layout_constraintWidth_percent=".5"
        android:layout_marginTop="5dp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/ubuntumedium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:id="@+id/food_intro1_tv3"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/food_intro1_tv2"
        app:layout_constraintTop_toBottomOf="@id/food_intro1_tv2"
        android:textSize="16sp"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="10dp"
        android:src="@drawable/tab2"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias=".6"
        android:layout_marginLeft="5dp"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/food_intro1_tv3"
        app:layout_constraintTop_toBottomOf="@id/food_intro1_tv3"
        />
</androidx.constraintlayout.widget.ConstraintLayout>