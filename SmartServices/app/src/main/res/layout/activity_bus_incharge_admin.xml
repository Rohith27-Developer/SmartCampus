<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".BusInchargeAdmin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="25dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome Back"
                android:fontFamily="@font/ubuntubold"
                android:textColor="#80000000"
                android:contentDescription="@string/app_name"
                android:textSize="22sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rohith"
                android:id="@+id/namebusi"
                android:fontFamily="@font/ubuntumedium"
                android:textColor="#212121"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/app_name"
                android:textSize="20sp"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/dpbusi"
            />
    </LinearLayout>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/bus"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        app:lottie_autoPlay="true"
        app:lottie_fileName="bus.json"
        app:lottie_loop="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT OPTIONS"
        android:fontFamily="@font/colusregular"
        android:textSize="20dp"
        android:textColor="#212121"
        android:id="@+id/sampletv"
        android:layout_below="@id/bus"
        android:layout_margin="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_below="@id/sampletv"
        android:id="@+id/samplell"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:background="@drawable/regstroke"
            android:id="@+id/trackall"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:alpha="0.8"
                android:id="@+id/busicon"
                android:layout_marginLeft="25dp"
                android:src="@drawable/bus"
                android:tint="#1e3d59"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRACK BUSES"
                android:layout_marginLeft="15dp"
                android:id="@+id/bustext"
                android:textColor="#1e3d59"
                android:fontFamily="@font/montserrat_bold"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/regstroke"
            android:id="@+id/notifybus"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:alpha="0.8"
                android:id="@+id/noticon"
                android:layout_marginLeft="25dp"
                android:src="@drawable/notifications_icon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOTIFICATIONS"
                android:justificationMode="inter_word"
                android:textColor="#1e3d59"
                android:id="@+id/nottext"
                android:textAllCaps="true"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/montserrat_bold"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:background="@drawable/regstroke"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:id="@+id/logoutincharge"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:alpha="0.8"
                android:id="@+id/logouticon"
                android:layout_marginLeft="25dp"
                android:src="@drawable/ic_baseline_logout_24"
                android:tint="#1e3d59"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="#1e3d59"
                android:id="@+id/logouttext"
                android:layout_marginLeft="15dp"
                android:justificationMode="inter_word"
                android:text="LOGOUT"
                android:textAllCaps="true" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</ScrollView>