<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/dash"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".Second">

    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_alignParentStart="true"
        android:gravity="center"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/back_second"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:tint="@color/emptycart"
            android:src="@drawable/left" />

    </LinearLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cart_second"
        style="?attr/actionButtonStyle"
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/cart_bg"
        android:clipToPadding="false"
        android:focusable="true"
        android:gravity="center">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:tint="@color/text"
            android:src="@drawable/cart" />

        <TextView
            android:id="@+id/cart_badge"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right|end|top"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="-5dp"
            android:layout_marginRight="-5dp"
            android:background="@drawable/badgebg"
            android:gravity="center"
            android:padding="3dp"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/constraintLayout"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bgcanteen_rad"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/textView2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/bgcanteen"
                    android:fontFamily="@font/novar"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical"
                    android:text="Lunch"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/proteins" />

                    <TextView
                        android:id="@+id/prots"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="25 %"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/textView3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/bgcanteen"
                    android:fontFamily="@font/novar"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:text="Lunch"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/calorie" />

                    <TextView
                        android:id="@+id/calories1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="70 %"
                        android:textColor="#000000" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/textView4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/bgcanteen"
                    android:fontFamily="@font/novar"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:text="Lunch"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/fat" />

                    <TextView
                        android:id="@+id/fats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="46 %"
                        android:textColor="#000000" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/textView5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/bgcanteen"
                    android:fontFamily="@font/novar"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:text="Lunch"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/carbohydrates" />

                    <TextView
                        android:id="@+id/carbs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="30 %"
                        android:textColor="#000000" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


    <Button
        android:id="@+id/l3"
        android:layout_width="200dp"
        android:layout_height="85dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/add_to_cart_bg"
        android:drawableEnd="@drawable/ic_arrow_forward_black_24dp"
        android:gravity="center"
        android:orientation="vertical"
        android:text="Add to Cart"
        android:textColor="#FFFFFF"></Button>

    <LinearLayout
        android:id="@+id/l4"
        android:layout_width="150dp"
        android:layout_height="85dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:fontFamily="@font/colusregular"
            android:gravity="center"
            android:maxLines="1"
            android:text="â‚¹"
            android:textColor="#1e3d59"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/pri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:ellipsize="end"
            android:fontFamily="@font/colusregular"
            android:gravity="center"
            android:maxLines="1"
            android:text="25"
            android:textColor="#1e3d59"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/food_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/colusregular"
            android:text="Chicken"
            android:textColor="#1e3d59"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="135dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/food_img"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:src="@drawable/barbecue" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:clickable="false"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="3.2"
            android:secondaryProgressTint="#00000000"
            android:stepSize="0.1" />

        <LinearLayout

            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/decre"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView13"
                app:layout_constraintTop_toTopOf="@+id/button2"
                app:srcCompat="@drawable/minus" />

            <TextView
                android:id="@+id/value_id"
                android:layout_width="50dp"
                android:layout_height="53dp"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/text"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView8"
                app:layout_constraintStart_toEndOf="@+id/imageView8"
                app:layout_constraintTop_toTopOf="@+id/imageView8"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/incre"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView14"
                app:layout_constraintStart_toEndOf="@+id/textView14"
                app:layout_constraintTop_toTopOf="@+id/textView14"
                app:srcCompat="@drawable/pdd" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/review"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_marginTop="525dp"

        android:gravity="center"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/ubuntumedium"
            android:id="@+id/text_abt_can"
            android:justificationMode="inter_word"
            android:lineSpacingExtra="5dp"
            android:padding="10dp"
            android:src="@drawable/barbecue"
            android:text="Chicken is a lean meat with high nutritional value, and eating it regularly will help you stay healthy."
            android:textColor="@color/textColor"
            android:textSize="18dp" />

    </LinearLayout>

</RelativeLayout>