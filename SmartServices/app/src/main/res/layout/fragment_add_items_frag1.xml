<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <moe.feng.common.stepperview.VerticalStepperItemView
            android:id="@+id/stepper_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:step_activated_color="#1e3d59"
            app:step_line_color="#1e3d59"
            app:step_normal_color="#1e3d59"
            app:step_index="1"
            app:step_title="Step 1"
            app:step_summary_done="Done"
            app:step_state="selected">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner1"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_marginTop="10dp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/itemname"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:hint="Enter Item name"
                    android:fontFamily="@font/ubuntumedium"
                    />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/price"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:hint="Enter Price"
                    android:inputType="number"
                    android:maxLength="3"
                    android:fontFamily="@font/ubuntumedium"
                    />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_next_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#1e3d59"
                        android:textColor="@android:color/white"
                        android:text="@android:string/ok"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="#6A85A6"
                        android:textColor="#FFFFFF"
                        android:text="@android:string/cancel"/>

                </LinearLayout>

            </LinearLayout>

        </moe.feng.common.stepperview.VerticalStepperItemView>

        <moe.feng.common.stepperview.VerticalStepperItemView
            android:id="@+id/stepper_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:step_activated_color="#1e3d59"
            app:step_line_color="#1e3d59"
            app:step_normal_color="#1e3d59"
            android:layout_marginTop="8dp"
            app:step_index="2"
            app:step_title="Step 2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Additional Details"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/caloriesadmin"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:hint="Enter Calories"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:fontFamily="@font/ubuntumedium"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/carbsadmin"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:hint="Enter Carbohydrates"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:fontFamily="@font/ubuntumedium"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/protsadmin"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:hint="Enter Proteins"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:fontFamily="@font/ubuntumedium"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/fatsadmin"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:hint="Enter Fats"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:fontFamily="@font/ubuntumedium"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_next_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#1e3d59"
                        android:textColor="@android:color/white"
                        android:text="@android:string/ok"/>

                    <Button
                        android:id="@+id/button_prev_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="#6A85A6"
                        android:textColor="#FFFFFF"
                        android:text="@android:string/cancel"/>



                </LinearLayout>

            </LinearLayout>

        </moe.feng.common.stepperview.VerticalStepperItemView>

        <moe.feng.common.stepperview.VerticalStepperItemView
            android:id="@+id/stepper_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:step_index="3"
            app:step_activated_color="#1e3d59"
            app:step_line_color="#1e3d59"
            app:step_normal_color="#1e3d59"
            app:step_title="Step 3"
            app:step_summary_done="Last step. Done"
            app:step_is_last="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Add image"/>
                <Button
                    android:id="@+id/addimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#1e3d59"
                    android:textColor="@android:color/white"
                    android:text="Upload Image"/>
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/addimgiv"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_next_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#1e3d59"
                        android:textColor="@android:color/white"
                        android:text="@android:string/ok"/>

                    <Button
                        android:id="@+id/button_prev_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#6A85A6"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="8dp"
                        android:text="@android:string/cancel"/>

                </LinearLayout>

            </LinearLayout>

        </moe.feng.common.stepperview.VerticalStepperItemView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>